@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "Livros";
}

<h1 class="text-3xl mb-2">
    <strong>Cadastro de Livros</strong>
</h1>

<hr class="mb-6">

<a asp-action="Create" class="create-button mb-3">
    <i class="material-symbols-outlined">
        add_circle
    </i>
</a>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCopies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" class="text-center w-full gap-2">
                    <span>
                        Nenhum registro encontrado.
                    </span>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCopies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                </td>
                <td class="cell-actions">
                    <a asp-action="Edit" asp-route-id="@item.BookId">
                        <i class="material-symbols-outlined scale-90">
                            edit_note
                        </i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.BookId">
                        <i class="material-symbols-outlined scale-90">
                            info
                        </i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.BookId">
                        <i class="material-symbols-outlined scale-90">
                            delete
                        </i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
