@model Library.Models.Book

@{
    ViewData["Title"] = "Cadastro de livro";
}

<h1 class="text-3xl mb-2">
    <strong>Cadastrar livro</strong>
</h1>

<hr class="mb-6">

<form asp-action="Create" class="flel flex-col gap-11 mb-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="flex flex-col gap-2">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control rounded-xl flex" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Isbn" class="control-label"></label>
        <input asp-for="Isbn" class="form-control rounded-xl flex" />
        <span asp-validation-for="Isbn" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="PublishDate" class="control-label"></label>
        <input asp-for="PublishDate" class="form-control rounded-xl flex" />
        <span asp-validation-for="PublishDate" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="NumberOfCopies" class="control-label"></label>
        <input asp-for="NumberOfCopies" class="form-control rounded-xl flex" />
        <span asp-validation-for="NumberOfCopies" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Genre" class="control-label"></label>
        <input asp-for="Genre" class="form-control rounded-xl flex" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2 mb-3">
        <label asp-for="PublisherId" class="control-label"></label>
        <select asp-for="PublisherId" class="form-control rounded-xl flex" asp-items="ViewBag.PublisherId"></select>
    </div>
    <div class="flex flex-col gap-2">
        <input type="submit" value="CADASTRAR" class="btn btn-primary rounded-lg p-3" />
    </div>
</form>

<div>
    <a asp-action="Index" class="flex items-center justify-center rounded-xl p-4 border bg-white">
        <i class="material-symbols-outlined">
            arrow_back
        </i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
