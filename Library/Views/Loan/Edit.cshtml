@model Library.Models.Loan

@{
    ViewData["Title"] = "Alterar empréstimo";
}

<h1 class="text-3xl mb-2">
    <strong>Alteração de empréstimo</strong>
</h1>

<hr class="mb-6">

<form asp-action="Edit" class="flel flex-col gap-11 mb-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LoanId" />
    <div class="flex flex-col gap-2">
        <label asp-for="BookId" class="control-label"></label>
        <select asp-for="BookId" class="form-control rounded-xl flex" asp-items="ViewBag.BookId"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="MemberId" class="control-label"></label>
        <select asp-for="MemberId" class="form-control rounded-xl flex" asp-items="ViewBag.MemberId"></select>
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="LoanDate" class="control-label"></label>
        <input asp-for="LoanDate" class="form-control rounded-xl flex" />
        <span asp-validation-for="LoanDate" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2 mb-3">
        <label asp-for="ReturnDate" class="control-label"></label>
        <input asp-for="ReturnDate" class="form-control rounded-xl flex" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <input type="submit" value="SALVAR" class="btn btn-primary rounded-lg p-3" />
    </div>
</form>

<div>
    <a asp-action="Index" class="flex items-center justify-center rounded-xl p-4 border bg-white">
        <i class="material-symbols-outlined">
            arrow_back
        </i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
