@model Library.Models.Author

@{
    ViewData["Title"] = "Cadastro de Autor";
}

<h1 class="text-3xl mb-2">
    <strong>Cadastrar Autor</strong>
</h1>

<hr class="mb-6">

<form asp-action="Create" class="flel flex-col gap-11 mb-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="flex flex-col gap-2">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control rounded-xl flex" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control rounded-xl flex" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="BirthDate" class="control-label"></label>
        <input asp-for="BirthDate" class="form-control rounded-xl flex" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2 mb-3">
        <label asp-for="DeathDate" class="control-label"></label>
        <input asp-for="DeathDate" class="form-control rounded-xl flex" />
        <span asp-validation-for="DeathDate" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2">
        <input type="submit" value="CADASTRAR" class="btn btn-primary rounded-lg p-3" />
    </div>
</form>

<div>
    <a asp-action="Index" class="flex items-center justify-center rounded-xl p-4 border">
        <i class="material-symbols-outlined">
            arrow_back
        </i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
